<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3A656"
    tools:context=".Splashscreen">

    <ImageView
        android:id="@+id/img_swiggylogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:src="@drawable/swiggy2"/>

    <TextView
        android:id="@+id/text_swiggy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_swiggylogo"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textStyle="italic|bold"
        android:text="SWIGGY"
        android:gravity="center"
        android:textSize="25dp"/>

    <ProgressBar
        android:id="@+id/Progress_Bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/text_swiggy"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.swiggy.com"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"/>


</RelativeLayout>